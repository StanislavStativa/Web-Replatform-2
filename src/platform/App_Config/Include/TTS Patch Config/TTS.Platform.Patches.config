<configuration xmlns:patch="
http://www.sitecore.net/xmlconfig/"
xmlns:set="
http://www.sitecore.net/xmlconfig/set/">
	<sitecore>
		<api>
			<GraphQL>
				<defaults>
					<security>
						<publicService>
							<complexityConfiguration>
								<maxDepth>200</maxDepth>
								<maxComplexity>10000</maxComplexity>
							</complexityConfiguration>
						</publicService>
					</security>
				</defaults>
			</GraphQL>
		</api>

		<layoutService>
			<serializationMaxDepth>8</serializationMaxDepth>
		</layoutService>
    <settings>
      <setting name="Query.MaxItems" value="200"/>
    </settings>
	</sitecore>
</configuration>